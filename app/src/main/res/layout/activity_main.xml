<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CFE8EC">

            <TableRow
                android:background="#9BCBE1"
                android:paddingTop="4dp">
                <TextView
                    android:text="Group Name"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1" />
                <TextView
                    android:text="No. of Members"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Group A"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_a"
                    android:text="--"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Group B"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_b"
                    android:text="--"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Group C"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_c"
                    android:text="--"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Group D"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_d"
                    android:text="--"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Group E"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_e"
                    android:text="--"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="Group F"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_f"
                    android:text="--"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow
                android:layout_marginBottom="4dp">
                <TextView
                    android:text="Group G"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_g"
                    android:text="--"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_weight="1"/>
            </TableRow>

        </TableLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn"
        android:text="fetch data"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="#4AA6EF"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btn_user"
        android:layout_below="@+id/btn"
        android:text="show user detail"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="#57BEB4"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="24dp"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_above="@+id/btn"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"/>


</RelativeLayout>